<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/famousUserFragment">

    <fragment
        android:id="@+id/famousUserFragment"
        android:name="com.mdidproject.githubuser.FamousUserFragment"
        android:label="fragment_famous_user"
        tools:layout="@layout/fragment_famous_user" >
        <action
            android:id="@+id/action_famousUserFragment_to_searchUserFragment"
            app:destination="@id/searchUserFragment" />
        <action
            android:id="@+id/action_famousUserFragment_to_detailUserActivity"
            app:destination="@id/detailUserActivity" />
    </fragment>
    <fragment
        android:id="@+id/searchUserFragment"
        android:name="com.mdidproject.githubuser.SearchUserFragment"
        android:label="fragment_search_user"
        tools:layout="@layout/fragment_search_user" >
        <action
            android:id="@+id/action_searchUserFragment_to_detailUserActivity"
            app:destination="@id/detailUserActivity" />
    </fragment>
    <activity
        android:id="@+id/detailUserActivity"
        android:name="com.mdidproject.githubuser.DetailUserActivity"
        android:label="activity_detail_user"
        tools:layout="@layout/activity_detail_user" >
        <argument
            android:name="username"
            app:argType="string" />
    </activity>
</navigation>